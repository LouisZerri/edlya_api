# Copier ce fichier en .env.local et remplir les valeurs

APP_ENV=prod
APP_SECRET=CHANGE_ME

# Base de données
DATABASE_URL="mysql://user:password@127.0.0.1:3306/edlya?serverVersion=8.0"

# JWT (générer les clés avec: php bin/console lexik:jwt:generate-keypair)
JWT_PASSPHRASE=CHANGE_ME

# CORS (regex des origines autorisées)
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'

# Mailer (Gmail: smtp://email:app_password@smtp.gmail.com:587)
MAILER_DSN=null://null
MAILER_FROM_EMAIL=noreply@edlya.fr
MAILER_FROM_NAME=Edlya

# OpenAI (pour import PDF et aide IA)
OPENAI_API_KEY=sk-...
